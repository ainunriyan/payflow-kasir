# PayFlow Production Environment Configuration

# App Configuration
REACT_APP_NAME=PayFlow Kasir
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG=false

# API Configuration
REACT_APP_API_BASE_URL=https://api.payflow.id
REACT_APP_LICENSE_SERVER=https://api.payflow.id/license
REACT_APP_UPDATE_SERVER=https://api.payflow.id/updates

# License Configuration
REACT_APP_LICENSE_REQUIRED=true
REACT_APP_TRIAL_DAYS=30
REACT_APP_LICENSE_CHECK_INTERVAL=86400000

# Feature Flags
REACT_APP_ENABLE_CUSTOMER_MANAGEMENT=true
REACT_APP_ENABLE_THERMAL_PRINTER=true
REACT_APP_ENABLE_CLOUD_BACKUP=true
REACT_APP_ENABLE_MULTI_USER=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_AUTO_UPDATE=true

# Security Configuration
REACT_APP_ENABLE_ENCRYPTION=true
REACT_APP_SESSION_TIMEOUT=28800000
REACT_APP_MAX_LOGIN_ATTEMPTS=5

# Performance Configuration
REACT_APP_ENABLE_CACHING=true
REACT_APP_CACHE_DURATION=3600000
REACT_APP_ENABLE_COMPRESSION=true

# Analytics & Tracking
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=
REACT_APP_ERROR_TRACKING=false

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=0

# PWA Configuration
REACT_APP_ENABLE_PWA=true
REACT_APP_PWA_NAME=PayFlow Kasir
REACT_APP_PWA_SHORT_NAME=PayFlow